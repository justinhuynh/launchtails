<div class="row">
  <div class="large-12">
    <h1>Categories</h1>

    <%- if !@categories.empty? -%>
      <table>
        <tr>
          <th>Name</th>
        </tr>

        <%- @categories.each do |category| -%>
          <tr>
            <td><%= link_to category.name, category_path(category) %></td>
          </tr>
        <%- end -%>
      </table>

    <%- end -%>
  </div>
</div>
